<% provide(:title, 'e-ラーニングシステムへようこそ') %>
<%= form_for @user, :url => {:action => 'login'} do |f| %>
	<div style="width:100%;text-align:left">
		<%= render 'shared/error_messages', info: notice, object: f.object %>
	</div>
	<table>
		<tr>
			<th>ログインID</th>
			<td><%=f.text_field :user_id, :style=>'width:100px;' %></td>
		</tr>
		<tr>
			<th>パスワード</th>
			<td><%=f.password_field :password, :style=>'width:100px;' %></td>
		</tr>
	</table>
	<%= f.submit "ログイン", :style=>"margin-top:10px" %>
<% end %>
</div>
